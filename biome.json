{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "pdf-canvas.tsx",
      "pdf-viewer.tsx",
      "use-pdf-viewer.ts",
      "use-pdf-search.ts",
      "use-pdf-highlights.ts"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", ".next"]
  },
  "formatter": {
    "ignore": ["node_modules", ".next"],
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "ignore": ["node_modules", ".next"],
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
